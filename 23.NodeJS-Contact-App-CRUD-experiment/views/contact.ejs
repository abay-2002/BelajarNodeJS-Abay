<h1 class="mb-3">Daftar <%= title %></h1>
<hr>
<a href="/contact/add" class="btn btn-primary mb-3">Tambah Contact</a>
<% if (contacts.length == 0) { %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama</th>
        <th scope="col">NoHp</th>
        <th scope="col">Detail</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td colspan="5">
          <div class="alert alert-danger" role="alert">
            Daftar Contact masih kosong
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama</th>
        <th scope="col">NoHp</th>
        <th scope="col">Detail</th>
        <th scope="col">Remove</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach((contact, i=0) => { i++ %>
        <tr>
          <th scope="row"><%= i %> </th>
          <td><%= contact.nama %> </td>
          <td><%= contact.nohp %> </td>
          <td>
            <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
          </td>
          <td>
            <a href="/contact/remove/<%= contact.email %> " class="btn btn-danger badge rounded-pill"><i class="bi bi-dash-circle"></i> Remove</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %> 